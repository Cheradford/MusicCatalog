<Window x:Class="Music.View.Frames.Application.CreatePlaylist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Music.View.Frames.Application"
        mc:Ignorable="d"
        Title="CreatePlaylist" Height="200" Width="400" Padding="50 10">
<hc:FlexPanel FlexDirection="Column" JustifyContent="SpaceBetween">
        <hc:TextBox hc:InfoElement.ShowClearButton="True" hc:InfoElement.Necessary="True" hc:TitleElement.Title="Название" x:Name="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"></hc:TextBox>
        <hc:CheckComboBox Height="50" Style="{StaticResource CheckComboBoxExtend}" hc:InfoElement.Necessary="True" hc:TitleElement.TitlePlacement="Top" hc:TitleElement.Title="Композиции" ShowSelectAllButton="True"  x:Name="Songs"></hc:CheckComboBox>
        <Button x:Name="Button" Click="Button_OnClick" Style="{StaticResource ButtonPrimary}" Content="Создать"  HorizontalAlignment="Center" VerticalAlignment="Center"></Button>

</hc:FlexPanel>
</Window>
