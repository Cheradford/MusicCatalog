<Window x:Class="Music.View.Frames.Application.CreateAlbum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Music.View.Frames.Application"
        mc:Ignorable="d"
        Title="Создание нового альбома" Height="300" Width="400"
        Padding="50 10">
    <hc:FlexPanel FlexDirection="Column" JustifyContent="SpaceBetween">
        <hc:TextBox hc:InfoElement.ShowClearButton="True" hc:InfoElement.Necessary="True" Grid.Row="0" hc:TitleElement.Title="Название" x:Name="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"></hc:TextBox>
        <hc:ComboBox Height="50" Style="{StaticResource ComboBoxExtend}" hc:InfoElement.Necessary="True" Grid.Row="1" SelectedIndex="0" hc:TitleElement.Title="Автор" x:Name="Artist"></hc:ComboBox>
        <Button Grid.Row="1" x:Name="Button" Content="Создать" Click="Button_OnClick" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
    </hc:FlexPanel>
</Window>
